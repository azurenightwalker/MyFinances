<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".fragments.CreateAccountFragment">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountNameLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountName"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/accountNameLabel"/>

    <TextView
        android:text="Starting Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountBalanceLabel"
        android:layout_below="@id/accountName"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/accountBalance"
        android:layout_below="@id/accountName"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/accountBalanceLabel"/>

    <TextView
        android:text="Overdraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountBalance"
        android:id="@+id/accountOverdraftLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/accountOverdraft"
        android:layout_below="@id/accountBalance"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/accountOverdraftLabel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/saveAccount"
        android:layout_below="@+id/accountOverdraft"
        android:layout_alignParentLeft="true"
        android:onClick="saveAccount" />

</RelativeLayout>
